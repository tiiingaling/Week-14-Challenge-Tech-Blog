<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit {{post.title}}:</h3>
    
    <form
      action="/api/posts/{{post.id}}"
      method="POST"
      class="edit-post-form"
      data-id="{{post.id}}"
    >
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input
          class="edit-post-form form-control"
          type="text"
          id="post-title"
          name="title"
          value="{{post.title}}"
        />
      </div>
      <div class="form-group">
        <label for="post-content">Post Content:</label>
        <textarea
          class="edit-post-form form-control-lg"
          id="post-content"
          rows="3"
          name="content"
        >{{post.content}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update Post</button>
    </form>
    <script>console.log(post.title)</script>
    <script src="/js/editPost.js"></script>
  </div>
</div>
