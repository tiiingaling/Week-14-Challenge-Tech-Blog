<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
    <a href="/new" class="btn btn-primary">Create New Post</a>
  </div>
</div>



  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-primary" onclick="location.href='/edit/{{post.id}}'">EDIT</button>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>